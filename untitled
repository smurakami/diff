  CGRect adFrame = AD_FRAME;
  CGRect bounds = [UIScreen orientedBounds];
  if ([UIScreen isPortrait]) {
    adFrame.origin.x = (bounds.size.width  - adFrame.size.width ) / 2;
    adFrame.origin.y = (bounds.size.height - adFrame.size.height) / 2;
  } else {
    adFrame.origin.x = (bounds.size.width  - adFrame.size.width ) / 2;
    adFrame.origin.y = 20;
  }
  self.nadView.frame = adFrame;
